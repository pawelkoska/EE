<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE glassfish-ejb-jar PUBLIC "-//GlassFish.org//DTD GlassFish Application Server 3.1 EJB 3.1//EN" "http://glassfish.org/dtds/glassfish-ejb-jar_3_1-1.dtd">
<glassfish-ejb-jar>
    <security-role-mapping>
        <role-name>Patient</role-name>
        <group-name>PATIENT</group-name>
    </security-role-mapping>
    <security-role-mapping>
        <role-name>Doctor</role-name>
        <group-name>DOCTOR</group-name>
    </security-role-mapping>
    <security-role-mapping>
        <role-name>Reception</role-name>
        <group-name>RECEPTION</group-name>
    </security-role-mapping>
    <security-role-mapping>
        <role-name>Admin</role-name>
        <group-name>ADMIN</group-name>
    </security-role-mapping>
    <security-role-mapping>
        <role-name>role1</role-name>
    </security-role-mapping>
    <enterprise-beans>
        <ejb>
            <ejb-name>ExaminationEndpoint</ejb-name>
            <ior-security-config>
                <as-context>
                    <auth-method>USERNAME_PASSWORD</auth-method>
                    <realm>dbMedCenterRealm</realm>
                </as-context>
            </ior-security-config>
        </ejb>
    </enterprise-beans>
</glassfish-ejb-jar>
